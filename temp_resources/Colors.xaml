<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="TransportTracker.UI.Resources.Colors">

    <!-- Primary Theme Colors -->
    <Color x:Key="Primary">#1976D2</Color>
    <Color x:Key="PrimaryDark">#1565C0</Color>
    <Color x:Key="PrimaryLight">#42A5F5</Color>
    <Color x:Key="Accent">#FF4081</Color>

    <!-- Functional Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FFC107</Color>
    <Color x:Key="Danger">#F44336</Color>
    <Color x:Key="Info">#2196F3</Color>

    <!-- Vehicle Status Colors -->
    <Color x:Key="OnTime">#4CAF50</Color>
    <Color x:Key="SlightDelay">#FFC107</Color>
    <Color x:Key="Delayed">#FF9800</Color>
    <Color x:Key="SevereDelay">#F44336</Color>
    <Color x:Key="Canceled">#9E9E9E</Color>

    <!-- Transport Type Colors -->
    <Color x:Key="BusColor">#2196F3</Color>
    <Color x:Key="TrainColor">#F44336</Color>
    <Color x:Key="TramColor">#4CAF50</Color>
    <Color x:Key="SubwayColor">#673AB7</Color>
    <Color x:Key="FerryColor">#00BCD4</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundLight">#FFFFFF</Color>
    <Color x:Key="BackgroundDark">#121212</Color>
    <Color x:Key="SurfaceLight">#F5F5F5</Color>
    <Color x:Key="SurfaceDark">#1E1E1E</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryLight">#212121</Color>
    <Color x:Key="TextSecondaryLight">#757575</Color>
    <Color x:Key="TextPrimaryDark">#FFFFFF</Color>
    <Color x:Key="TextSecondaryDark">#B0B0B0</Color>
    
    <!-- Disabled Colors -->
    <Color x:Key="DisabledLight">#BDBDBD</Color>
    <Color x:Key="DisabledDark">#424242</Color>
    
    <!-- Divider Colors -->
    <Color x:Key="DividerLight">#EEEEEE</Color>
    <Color x:Key="DividerDark">#2A2A2A</Color>
    
    <!-- Map Colors -->
    <Color x:Key="MapWater">#B3E5FC</Color>
    <Color x:Key="MapLand">#F5F5F5</Color>
    <Color x:Key="MapRoad">#BDBDBD</Color>
    <Color x:Key="MapRoute">#1976D2</Color>
</ResourceDictionary>
