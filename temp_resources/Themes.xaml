<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="TransportTracker.UI.Resources.Themes">

    <!-- Light Theme -->
    <ResourceDictionary x:Key="LightTheme">
        <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
        <Color x:Key="NavigationBarColor">#1976D2</Color>
        <Color x:Key="SurfaceColor">#F5F5F5</Color>
        <Color x:Key="CardColor">#FFFFFF</Color>
        <Color x:Key="TextColor">#212121</Color>
        <Color x:Key="SecondaryTextColor">#757575</Color>
        <Color x:Key="DividerColor">#EEEEEE</Color>
    </ResourceDictionary>

    <!-- Dark Theme -->
    <ResourceDictionary x:Key="DarkTheme">
        <Color x:Key="PageBackgroundColor">#121212</Color>
        <Color x:Key="NavigationBarColor">#0D47A1</Color>
        <Color x:Key="SurfaceColor">#1E1E1E</Color>
        <Color x:Key="CardColor">#2A2A2A</Color>
        <Color x:Key="TextColor">#FFFFFF</Color>
        <Color x:Key="SecondaryTextColor">#B0B0B0</Color>
        <Color x:Key="DividerColor">#2A2A2A</Color>
    </ResourceDictionary>

</ResourceDictionary>
